@model ProductUpdateVm
<div class="container">
    <div class="row">
        <h2>Update Product</h2>

        <form method="post" enctype="multipart/form-data" >
            <div class="form-group">
                <label for="title">Name</label>
                <input asp-for="Name" class="form-control" id="name=" "" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
               <input type="hidden" asp-for="HoverImagePath"/>
                <img src="~/assets/images/website-images/@Model.MainImagePath"width="50" height="50" />
                <label for="MainImage">Main Image</label>
                <input Asp-For="MainImage" class="form-control" id="MainImage" >
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="HoverImagePath" />

                <img src="~/assets/images/website-images/@Model.HoverImagePath" width="50" height="50" />
                <label for="HoverImage">Hover Image</label>
                <input Asp-For="HoverImage" class="form-control" id="HoverImage">
                <span class="text-danger" asp-validation-for="HoverImage"></span>
            </div>
            <div class="form-group">
                <label for="Icon">Price</label>
                <input Asp-For="Price" class="form-control" id="Price" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label for="CategoryId">CategoryId</label>
                <select asp-for="CategoryId" id="CategoryId">

                    <option value="null" disabled selected>Category secin</option>
                    @foreach (Category category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label for="TagId">Tags</label>
                <select asp-for="TagIds" id="TagId">

                    <option value="null" disabled sel>Tag secin</option>
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }

                </select>
                <span class="text-danger" asp-validation-for="TagIds"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>>
        </form>
    </div>
</div>